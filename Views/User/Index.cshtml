<div class="container">
    <h1>User List</h1>
    <a href="#" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-plus"></span> Add User</a>
    <a [routerLink]="['/stores', 1]">Store List</a>
    <div>
        <table class="table ">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date of Birth</th>
                    <th>Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr *ngFor="let user of users">
                    <td><a [routerLink]="['/users/user-detail', user.ID]">{{user.UserName}}</a></td>
                    <td>{{user.DOB | date}}</td>
                    <td>{{user.Status}}</td>
                    <td><a [routerLink]="['/users/user-edit', user.ID]" class="btn btn-success">edit</a> | <button (click)="deleteuser(user.ID)" class="btn btn-danger">remove</button></td>
                </tr>
            </tbody>
        </table>
    </div>

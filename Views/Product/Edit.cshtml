<div class="col-sm-9">
    @*<form class="form" #addProductForm="ngForm" (ngSubmit)="saveProduct($event)" enctype="multipart/form-data">*@
    <div *ngIf="message" class="alert-success">
        {{message}}
    </div>
    <div class="form_row">
        <label>Name:</label>
        <input type="text" [(ngModel)]="product.Name" placeholder="Name" class="form_name" #name="ngModel" />
    </div>
    <div class="form_row">
        <label>Description:</label>
        <input type="text" [(ngModel)]="product.Description" placeholder="Description" class="form_name" />
    </div>
    <div class="form_row form-inline">
        <label>Manufactured Country:</label>
        <select [(ngModel)]="product.ManufacturedCountryID" name="mancountry">
            <option *ngFor="let country of countries" value={{country.Id}}>{{country.CommonName}}</option>
        </select>
    </div>
    <div class="form_row">
        <label>Price: </label>
        <input type="text" [(ngModel)]="product.Price" name="price" class="form_name" />
    </div>
    <div class="form_row">
        <label>Quantity:</label>
        <input type="text" [(ngModel)]="product.Quantity" name="quantity" class="form_name" />
    </div>
    <div class="form_row">
        <label>Weight (cm):</label>
        <input type="text" [(ngModel)]="product.Weight" name="weight" class="form_name" />
    </div>
    <div class="form_row">
        <label>Height (cm):</label>
        <input type="text" [(ngModel)]="product.Height" name="height" class="form_name" />
    </div>
    <div class="form_row form-inline">
        <label>Product Type:</label>
        <select [(ngModel)]="product.ProductTypeID" name="type">
            <option *ngFor="let type of types" value="{{type.ID}}">{{type.Name}}</option>
        </select>
    </div>
    <div class="form_row">
        <label>Change Description:</label>
        <input type="text" [(ngModel)]="product.ActionLog" name="actionlog" class="form_name" />
    </div>
    <input id="photo" type="file" (change)="setB64()" />
    <button type="submit" class="btn btn-default" (click)="SaveChange()">Save</button>
    <a class="btn btn-danger" [routerLink]="['stores/store-detail', product.StoreID]">Cancel</a>
    @*</form>*@
</div>
<div class="action_noti" id="succMess" hidden>
    <label style="margin:10px">Updated successfully!</label>
</div>
<div class="error_noti" id="errMess" hidden>
    <label style="margin:10px">{{message}}</label>
</div>
<div class="col-sm-9">
    <div class="row" style="padding:20px">
        <div class="form_row">
            <label>Search Store: </label> 
            <input type="text" class="form_name" [(ngModel)]="searchkey" #term (keyup.enter)="SearchStore()" placeholder="Store ID Ex: 1, 2, 3 ...." />
        </div>
        <div class="form_row" hidden id="errorMess"><label style="color:indianred;">This store does not exist.</label></div>
    </div>
    <div *ngIf="store">
        <table class="table">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Name</td>
                    <td>Status</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{store.ID}}</td>
                    <td>{{store.Name}}</td>
                    <td>{{store.Status}}</td>
                    <td><button *ngIf="store.StatusId == 3" class="btn btn-success" (click)="Approve(store.ID)">Approve</button> | <button *ngIf="store.StatusId == 3" class="btn btn-danger" (click)="Cancel(store.ID)">Cancel</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="action_noti" hidden id="approveMess" >
    <label style="margin:10px">Approved successfully!</label>
</div>
<div class="col-sm-7 form-body">

    <div class="container add-form">
        <h2>Edit Store</h2>
        <div class="form">
            <div class="form_row">
                <label>Name:</label>
                <input type="text" class="form_name" [(ngModel)]="store.Name" name="name" />
            </div>
            <div class="form_row">
                <label>Tax Code:</label>
                <input type="text" class="form_name" name="" [(ngModel)]="store.TaxCode" />
            </div>
            <div class="form_row">
                <label>Bank Account:</label>
                <input type="text" class="form_name" name="" [(ngModel)]="store.BankAccount" />
            </div>
            <div class="form_row">
                <label>Description:</label>
                <textarea [(ngModel)]="store.Description" class="form_name" name="description"></textarea>
            </div>
            <div class="form_row">
                <label>Required Deposit:</label>
                <textarea [(ngModel)]="store.RequiredDeposit" class="form_name" name="description" id="mytextarea"></textarea>
            </div>
            <div class="form_row">
                <label>Address:</label>
                @*<input type="text" [(ngModel)]="store.Address" class="form_name"/>*@
                <div class="form-group">
                    <input placeholder="search for location" autocorrect="off" autocapitalize="off" spellcheck="off" type="text" class="form_name" #search [formControl]="searchControl" />
                </div>
                <sebm-google-map [latitude]="latitude" [longitude]="longitude" [scrollwheel]="false" [zoom]="zoom">
                    <sebm-google-map-marker [latitude]="latitude" [longitude]="longitude"></sebm-google-map-marker>
                </sebm-google-map>
            </div>
            <div class="form_row">
                <label>Avatar:</label>
                <input type="file" class="form_name" name="photo" id="photo" (change)="setThumbailImg()" />

            </div>
            <div class="form_row">
                <button type="submit" class="btn btn-success" (click)="SaveChange($event)">Save</button>
                <a class="btn btn-danger" [routerLink]="['/stores/store-detail', store.ID]">Cancel</a>
                <button hidden data-toggle="modal" data-target="#modalMessage" id="modalClick"></button>
            </div>
        </div>
    </div>
</div>
<div class="error_noti" id="storeMess_error" hidden>
    <label style="margin:10px">{{message}}</label>
</div>
<div class="action_noti" id="storeMess_success" hidden>
    <label style="margin:10px">{{message}}</label>
</div>
<div class="col-md-1"></div>
<div class="col-md-3" style="border:1px solid #d1d1d1; padding:0px; border-radius:8px">
    <h2 style="background-color:#425161; border-radius:8px 8px 0 0; text-align:center; color:white">Quick Preview</h2>
    <div style="padding: 18px">
        <img style="object-fit:fill; height:100%; width:100%" src="{{store.ImgLink}}" id="storeThumbailImg" />
        <img style="object-fit:fill; height:100%; width:100%" id="previewImg" />
        <div>
            <label>Store Name: </label>
            <p>{{store.Name}}</p>
        </div>
        <div>
            <label>
                Address:
            </label>
            <p *ngIf="store.Address == ''">{{address}}</p>
            <p *ngIf="store.Address != ''">{{store.Address}}</p>
        </div>
        <div>
            <label>
                Description:
            </label>
            <p>{{store.Description}}</p>
        </div>
    </div>
</div>